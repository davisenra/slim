{
  "name": "php/slim",
  "type": "project",
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "format": "php vendor/bin/php-cs-fixer fix",
    "analyse": "php vendor/bin/phpstan analyse --memory-limit=2G",
    "test": "php vendor/bin/phpunit"
  },
  "require": {
    "slim/slim": "^4.13",
    "nyholm/psr7-server": "^1.1",
    "nyholm/psr7": "^1.8",
    "monolog/monolog": "^3.5",
    "php-di/php-di": "^7.0",
    "doctrine/orm": "^3.1",
    "symfony/cache": "^7.0",
    "symfony/dotenv": "^7.0",
    "guzzlehttp/guzzle": "^7.8"
  },
  "require-dev": {
    "symfony/var-dumper": "^7.0",
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^1.10",
    "friendsofphp/php-cs-fixer": "^3.52"
  }
}
