{
  "name": "php/slim",
  "type": "project",
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "format": "php vendor/bin/pint --preset psr12",
    "analyse": "php vendor/bin/phpstan analyse",
    "test": "php vendor/bin/phpunit"
  },
  "require": {
    "slim/slim": "^4.13",
    "nyholm/psr7-server": "^1.1",
    "nyholm/psr7": "^1.8",
    "monolog/monolog": "^3.5",
    "php-di/php-di": "^7.0"
  },
  "require-dev": {
    "symfony/var-dumper": "^7.0",
    "phpunit/phpunit": "^11.0",
    "laravel/pint": "^1.14",
    "phpstan/phpstan": "^1.10"
  }
}
